<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <div class="container my-4 px-3">
      <h2>Update Blog</h2>
      <div class="row mt-4 justify-content-center">
        <div class="col-lg-8">
          <form action="/blogs/<%= blog._id %>/update" method="POST">
            <div class="form-group row">
              <label class="col-sm-2 col-form-label mb-2" for="title"
                >Title</label
              >
              <div class="col-sm-10 mb-3">
                <input
                  class="form-control"
                  type="text"
                  id="title"
                  name="title"
                  value="<%= blog.title %>"
                  required
                />
              </div>
              <label class="col-sm-2 col-form-label mb-2" for="description"
                >Description</label
              >
              <div class="col-sm-10 mb-3">
                <input
                  class="form-control"
                  type="text"
                  id="description"
                  name="description"
                  value="<%= blog.description %>"
                  required
                />
              </div>
              <label class="col-sm-2 col-form-label mb-2" for="body"
                >Body</label
              >

              <div class="col-sm-10 mb-3">
                <textarea
                  class="form-control"
                  id="body"
                  name="body"
                  rows="10"
                  required
                >
<%= blog.body %></textarea
                >
              </div>
            </div>
            <button type="submit" class="ms-auto mt-4 btn btn-success">
              Publish
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
