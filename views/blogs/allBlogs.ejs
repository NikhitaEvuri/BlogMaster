<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/nav.ejs") %>
    <div>
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <a href="/blogs/<%= blog._id%>">
        <h3><%= blog.title %></h3>
        <p><%= blog.description %></p>
      </a>
      <% }) %> <% } else {%>
      <p>There are no blogs to display.....</p>
      <% } %>
    </div>
  </body>
</html>
